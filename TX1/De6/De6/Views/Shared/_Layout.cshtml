<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body{
            font-family: Calibri;
            background-color: #c3c3c3;
            padding: 10px 20%;
        }
        table {
            border-collapse: collapse;
            margin: 30px auto;
        }

        table, th, td {
            border: 1px solid black;
        }

        th, td {
            padding: 5px;
        }

        th {
            text-align: center;
        }

        header{
            background-color: white;
        }
        header div {
            margin: 2px 0px;
            padding: 25px;
            background-color: #00a2e8;
        }

            header div p {
                font-size: 30px;
                padding: 0px;
                color: white;
                text-align: center;
            }

        .menu {
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #99d9ea;
            padding: 5px;
            margin: 0px;
        }
        .menu li{
            list-style: none;
            margin: 0px 30px;
        }
            .menu li a{
                color: black;
                text-decoration: none;
                font-weight: bold;
            }

    section{
        background-color: white;
        height: 60vh;
        margin: 0px;
        padding: 1px;
    }
    </style>
</head>
<body>
    <header>
        <div>
            <p>Kiểm tra TX1</p>
        </div>
        <ul class="menu">
            <li>@Html.ActionLink("Hiển thị danh sách", "Hienthi", "QuanlyHocsinh")</li>
            <li>@Html.ActionLink("Thêm học sinh", "Nhap", "QuanlyHocsinh")</li>
        </ul>
    </header>
    <section>
        @RenderBody()
    </section>
</body>
</html>
